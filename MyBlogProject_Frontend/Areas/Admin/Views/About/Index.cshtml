
@model About

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Hakkımızda</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">

                <i class="fas fa-minus">
                </i>
            </button>
        </div>

    </div>



    <form>

        <div class="card-body">


            <div class="form-group">


                <label asp-for="@Model.Content">İçerik</label>
                <textarea asp-for="@Model.Content" type="text" class="form-control mb-3" id="defaultFormControlInput" style="min-height:250px;" aria-describedby="defaultFormControlHelp" readonly></textarea>

              

                <div class="row">
                    <div class="col-sm-9">
                        <label asp-for="@Model.PhotoPath">Fotoğraf</label>
                        <div class="row">
                            @if (Model.PhotoPath == null)
                            {
                                <div class="col-sm-9 ">
                                    <img src="~/articlephotos/nocontent.png" width="770" height="340">
                                </div>
                            }
                            else
                            {
                                <div class="col-sm-9 ">
                                    <img src="~/AboutPhotos/@Model.PhotoPath" width="770" height="340">
                                </div>
                            }


                        </div>
                    </div>
                </div>



            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <a class="btn btn-success float-right" href="/Admin/About/Update">Değişiklik Yap</a>
                
            </div>
        </div>
        


    </form>

</div>

