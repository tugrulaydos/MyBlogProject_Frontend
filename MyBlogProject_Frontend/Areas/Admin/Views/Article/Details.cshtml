
@model ApiArticleGetDto

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Makale Detayı</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">



                <i class="fas fa-minus">

                </i>
            </button>
        </div>

    </div>



    <form>

        <div class="card-body">


            <div class="form-group">


                <label asp-for="Category.Name">Kategori</label>
                <input asp-for="Category.Name" type="text" class="form-control" readonly/>

                <label asp-for="Title">Kategori Adı</label>
                <input asp-for="Title" type="text" class="form-control" readonly>

                <label asp-for="Content">İçerik</label>
                <textarea asp-for="Content" type="text" class="form-control mb-3" id="defaultFormControlInput" style="min-height:300px;" aria-describedby="defaultFormControlHelp" readonly></textarea>



                

                <div class="row">
                    <div class="col-sm-9">
                        <label asp-for="PhotoPath">Fotoğraf</label>
                        <div class="row">
                            <div class="col-sm-9 ">
								<img src="~/articlephotos/nocontent.png" />
                            </div>
							
                        </div>
                    </div>
                </div>
                
                

            </div>
        </div>


         <div class="row">
            <div class="col-12">
                <a href="/Article/Index" class="btn btn-secondary">Geri Gel</a>
               
            </div>
        </div>
        

    </form>

</div>



