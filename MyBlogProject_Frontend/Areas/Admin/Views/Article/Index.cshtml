@model List<ApiArticleGetDto>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section styles{
	

	<link rel="stylesheet" href="/Admin/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
	<link rel="stylesheet" href="/Admin/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
	<link rel="stylesheet" href="/Admin/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">

	<link href="~/admin/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css" rel="stylesheet" />
	<link href="~/admin/plugins/select2/css/select2.min.css" rel="stylesheet" />



	<link href="~/admin/plugins/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
	<link href="~/admin/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css" rel="stylesheet" />

}



<a class="btn btn-success mb-3" asp-area="Admin" asp-controller="Article" asp-action="Add">Makale Ekle<i class="bx bx-plus"></i></a>

<table class="table" id="tblArticles">
	<thead>
	<th>ID</th>
	<th>TITLE</th>
	<th>CREATED DATE</th>
	<th>MODIFIED DATE</th>
	<th>DELETED DATE</th>
	<th>GÜNCELLE </th>
	<th>SİL</th>
	<th>DETAY</th>


	</thead>

	<tbody>
		@foreach (var item in Model)
		{
			@if (item.IsDeleted == false)
			{
				<tr>
					<td>@item.ID</td>
					<td>@item.Title</td>
					<td>@(item.CreatedDate)</td>
					<td>@item.ModifiedDate</td>
					<td>@item.DeletedDate</td>
					<td><a href="/Article/Update/@item.ID" class="btn btn-primary">Güncelle</a></td>
					
					<td><button type="button" class="btn btn-danger DeleteArticle"  span="@item.ID">Sil</button></td>
					<td><a href="/Article/Details/@item.ID" class="btn btn-warning">DETAY</a></td>

				</tr>
			}
		}

	</tbody>

</table>


@section scripts
{

    <script src="/Admin/plugins/datatables/jquery.dataTables.min.js" ></script>
	<script src="/Admin/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>

