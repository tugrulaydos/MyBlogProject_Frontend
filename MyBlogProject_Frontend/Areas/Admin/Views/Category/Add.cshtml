
@model CategoryAddDto

@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">KategoriEkle</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>

   <form asp-controller="Category" asp-action="Add" method="post" >        
   
    <div class="card-body">
        <div class="form-group">
            <label asp-for="Name">Kategori Adı</label>
            <input asp-for="Name" type="text" class="form-control" placeholder="Lütfen Geçerli Bir Kategori Adı Giriniz...">           
        </div>    
    </div>    

    <div class="row">
    <div class="col-12">
        <a href="/Category/Index" class="btn btn-secondary">İptal</a>
        <input type="submit" value="Kategori Ekle" class="btn btn-success float-right">
    </div>
</div>

</form>

</div>




