@model CategoryAddDto

@{
	ViewData["Title"] = "Add";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section styles
	{
	<link href="~/admin/plugins/select2/css/select2.min.css" rel="stylesheet" />
	<link href="~/admin/plugins/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
}




<div class="card card-primary">
	<div class="card-header">
		<h3 class="card-title">KategoriEkle</h3>
		<div class="card-tools">
			<button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
				<i class="fas fa-minus"></i>
			</button>
		</div>
	</div>

	<form>
		<div asp-validation-summary="ModelOnly"></div>

		<div class="card-body">
			<div class="form-group">
				<label asp-for="Name">Kategori Adı</label>
				<span asp-validation-for="Name" class="text-danger"></span>
				<input asp-for="Name" id="CategoryName" type="text" class="form-control" placeholder="Lütfen Geçerli Bir Kategori Adı Giriniz...">
			</div>
		</div>

		<div class="row">

			<div class="col-12">
				<a href="/Category/Index" class="btn btn-secondary">Geri Gel</a>
				<input type="submit" value="Kategori Ekle" id="AddCategory" class="btn btn-success float-right">
			</div>
		</div>

	</form>

</div>



@section scripts
	{

	<script src="~/js/categoryaddwarning.js"></script>
	<script src="~/admin/plugins/select2/js/select2.min.js"></script>
	<script src="~/admin/plugins/sweetalert2/sweetalert2.min.js"></script>

}
