
@model CategoryIndexVM


@{
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}






<a class="btn btn-success mb-3" asp-area="Admin" asp-controller="Category" asp-action="Add">Kategori Ekle<i class="bx bx-plus"></i></a>

<table class="table">

	<thead>
		<th>ID</th>
		<th>NAME</th>		
		<th>SİL</th>
		<th>GÜNCELLE</th>
		<th>DETAY</th>
	</thead>

	<tbody>
		@foreach(var item in Model.Categories)
		{
			@if (!item.IsDeleted)
			{
				<tr>
					<td>@item.ID</td>
					<td>@item.Name</td>					
					<td><a href="/Category/Delete/@item.ID" class="btn btn-danger">SİL</a></td>
					<td><a href="/Category/CategoryUpdate/@item.ID" class="btn btn-primary">Güncelle</a></td>
					<td><a href="/Category/Details/@item.ID" class="btn btn-warning">Detay</a></td>
				</tr>
			}
		}
	</tbody>
</table>