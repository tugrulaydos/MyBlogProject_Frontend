

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model Contact


<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Mesaj İçeriği</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">



                <i class="fas fa-minus">

                </i>
            </button>
        </div>

    </div>



    <form>

        <div class="card-body">


            <div class="form-group">


                <label asp-for="@Model.ID">ID</label>
                <input asp-for="@Model.ID" type="text" class="form-control" readonly/>

                <label asp-for="@Model.Name">Ad Soyad</label>
                <input asp-for="@Model.Name" type="text" class="form-control" readonly>

                <label asp-for="@Model.Email">Email</label>
                <input asp-for="@Model.Email" type="text" class="form-control" readonly>

                <label asp-for="@Model.Subject">Konu</label>
                <input asp-for="@Model.Subject" type="text" class="form-control" readonly>

                <label asp-for="@Model.Message">Mesaj</label>
                <textarea asp-for="@Model.Message" type="text" class="form-control mb-3"  style="min-height:300px;" aria-describedby="defaultFormControlHelp" readonly></textarea>               

                
                
                

            </div>
        </div>


         <div class="row">
            <div class="col-12">
                
                <a href="/admin/MessageBox/Index" class="btn btn-secondary">Geri Dön</a>               
               
               
            </div>
        </div>
        

    </form>

</div>












