
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AboutUs_Layout.cshtml";
}

@model About


<section class="about-us">
    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                @if(Model.PhotoPath==null)
                {
                    <img src="~/stand-blog/assets/images/about-us.jpg" alt="NoPhoto" width="1170" height="550">
                }
                else
                {
                    <img src="~/AboutPhotos/@Model.PhotoPath" alt="NoPhoto">                    
                }

                <p>
                    @Model.Content;
            
                </p>
            </div>
        </div>

        

</section>

