@model HomePageVM

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/LayoutProperPage.cshtml";
}

@section headers
{    
	
	<div class="collapse navbar-collapse" id="navbarResponsive">
		<ul class="navbar-nav ml-auto">
			<li class="nav-item">
				<a class="nav-link active" href="/HomePage/Index">
					ANA SAYFA
					<span class="sr-only">(current)</span>
				</a>
			</li>
			<li class="nav-item">
				<a class="nav-link" href="/AboutUs/Index">HAKKIMIZDA</a>
			</li>
			<li class="nav-item">
				<a class="nav-link" href="/Contact/Index">İLETİŞİM</a>
			</li>

		</ul>
	</div>

}



<section class="blog-posts">
	<div class="container">
		<div class="row">
			<div class="col-lg-8">
				<div class="all-blog-posts">
					<div class="row">
						@foreach (var item in Model.Articles)
						{
							<div class="col-lg-12">

								<div class="blog-post">
									<div class="blog-thumb">
										<img src="/ArticlePhotos/@item.PhotoPath">
									</div>
									<div class="down-content">
										<span>@item.Category.Name</span>
										<a href="/PostDetailPage/Index/@item.ID"><h4>@item.Title</h4></a>
										<ul class="post-info">

											<li><a href="#">@item.CreatedDate</a></li>

										</ul>
										<p>@item.Content</p>

									</div>
								</div>
							</div>
						}


					</div>
				</div>
			</div>

			@await Html.PartialAsync("RightSide")


		</div>
	</div>
</section>

