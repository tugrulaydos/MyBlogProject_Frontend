@model HomePageVM

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<section class="blog-posts">
	<div class="container">
		<div class="row">
			<div class="col-lg-8">
				<div class="all-blog-posts">
					<div class="row">
						@foreach (var item in Model.Articles)
						{
							<div class="col-lg-12">

								<div class="blog-post">
									<div class="blog-thumb">
										<img src="/ArticlePhotos/@item.PhotoPath" >
									</div>
									<div class="down-content">
										<span>@item.Category.Name</span>
										<a href="/PostDetailPage/Index/@item.ID"><h4>@item.Title</h4></a>
										<ul class="post-info">

											<li><a href="#">@item.CreatedDate</a></li>

										</ul>
										<p>@item.Content</p>

									</div>
								</div>
							</div>
						}						


					</div>
				</div>
			</div>

			@await Html.PartialAsync("RightSide")


		</div>
	</div>
</section>

